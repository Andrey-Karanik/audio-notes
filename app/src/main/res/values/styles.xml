<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AudioNotes.AudioNoteItem.Button" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="icon">@drawable/ic_round_play_arrow_24</item>
        <item name="android:padding">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconSize">24dp</item>
    </style>
    <style name="AudioNotes.AudioNoteItem.TextView.Primary" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AudioNotes.AudioNoteItem.TextView.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_a1</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AudioNotes.RecordTimeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AudioNotes.RecordButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="icon">@drawable/ic_round_mic_24</item>
        <item name="iconSize">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="AudioNotes.RecordButtonWaveView" parent="">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">auto</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>
</resources>